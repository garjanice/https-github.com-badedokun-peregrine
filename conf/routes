# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           com.depth1.grc.controllers.Application.index()

POST    /register/create/done		com.depth1.grc.controllers.Application.addRisk()

GET		/register/create			com.depth1.grc.controllers.Application.showCreateRRPage()

GET		/register/view				com.depth1.grc.controllers.Application.showViewRRPage()

POST	/register/update			com.depth1.grc.controllers.Application.showUpdateRRPage()

GET		/register					com.depth1.grc.controllers.Application.showFrontRRPage()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
